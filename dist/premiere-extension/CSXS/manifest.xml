<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
                   ExtensionBundleId="com.premieresync.panel" 
                   ExtensionBundleVersion="1.0.0"
                   Version="8.0">
  
  <ExtensionList>
    <Extension Id="com.premieresync.panel" Version="1.0.0"/>
  </ExtensionList>
  
  <ExecutionEnvironment>
    <HostList>
      <!-- Adobe Premiere Pro -->
      <Host Name="PPRO" Version="[12.0,99.9]"/>
    </HostList>
    
    <LocaleList>
      <Locale Code="All"/>
    </LocaleList>
    
    <RequiredRuntimeList>
      <RequiredRuntime Name="CSXS" Version="8.0"/>
    </RequiredRuntimeList>
  </ExecutionEnvironment>
  
  <DispatchInfoList>
    <Extension Id="com.premieresync.panel">
      <DispatchInfo>
        <Resources>
          <MainPath>./client/index.html</MainPath>
          <ScriptPath>./host/index.jsx</ScriptPath>
          <CEFCommandLine>
            <Parameter>--enable-nodejs</Parameter>
            <Parameter>--mixed-context</Parameter>
            <Parameter>--disable-web-security</Parameter>
            <Parameter>--allow-file-access-from-files</Parameter>
          </CEFCommandLine>
        </Resources>
        
        <Lifecycle>
          <AutoVisible>true</AutoVisible>
        </Lifecycle>
        
        <UI>
          <Type>Panel</Type>
          <Menu>Team Sync</Menu>
          <Geometry>
            <Size>
              <Height>600</Height>
              <Width>500</Width>
            </Size>
            <MinSize>
              <Height>400</Height>
              <Width>400</Width>
            </MinSize>
          </Geometry>
          <Icons>
            <Icon Type="Normal">./icons/icon.png</Icon>
          </Icons>
        </UI>
      </DispatchInfo>
    </Extension>
  </DispatchInfoList>
</ExtensionManifest>
