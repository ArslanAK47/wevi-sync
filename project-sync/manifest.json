{
    "id": "com.wevisync.projectsync",
    "name": "Project Sync",
    "version": "1.0.0",
    "main": "index.html",
    "manifestVersion": 5,
    "host": {
        "app": "premierepro",
        "minVersion": "15.0.0"
    },
    "entrypoints": [
        {
            "type": "panel",
            "id": "projectSyncPanel",
            "label": {
                "default": "Project Sync"
            },
            "minimumSize": {
                "width": 280,
                "height": 400
            },
            "maximumSize": {
                "width": 600,
                "height": 800
            },
            "preferredDockedSize": {
                "width": 300,
                "height": 500
            },
            "preferredFloatingSize": {
                "width": 320,
                "height": 500
            },
            "icons": [
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/icon-light.png",
                    "scale": [
                        1,
                        2
                    ],
                    "theme": [
                        "lightest",
                        "light"
                    ]
                },
                {
                    "width": 23,
                    "height": 23,
                    "path": "icons/icon-dark.png",
                    "scale": [
                        1,
                        2
                    ],
                    "theme": [
                        "dark",
                        "darkest"
                    ]
                }
            ]
        }
    ],
    "requiredPermissions": {
        "network": {
            "domains": [
                "https://accounts.google.com",
                "https://oauth2.googleapis.com",
                "https://www.googleapis.com"
            ]
        },
        "localFileSystem": "fullAccess",
        "clipboard": "readAndWrite",
        "launchProcess": {
            "schemes": [
                "https"
            ]
        }
    }
}